<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_mode_base01</item>
        <item name="colorPrimaryDark">@color/color_mode_base05</item>
        <item name="colorAccent">@color/color_blue01</item>
        <item name="android:windowBackground">@color/color_mode_base01</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialog</item>
        <item name="android:statusBarColor">@color/color_mode_base01</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:titleMargin">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ActionBarAppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="homeAsUpIndicator">@drawable/back_light</item>
        <item name="actionBarStyle">@style/SolidActionBar</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="colorPrimary">@color/color_mode_base01</item>
        <item name="colorPrimaryDark">@color/color_mode_base05</item>
        <item name="colorAccent">@color/color_blue01</item>
        <item name="android:windowBackground">@color/color_mode_base01</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialog</item>
        <item name="android:statusBarColor">@color/color_mode_base01</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/color_mode_base05</item>
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SolidActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="MainButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:textColor">@color/color_only_base01</item>
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FlatButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/drawable_button_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_only_base01</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="TextViewLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/color_mode_base04</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="BottomSheetTitle" parent="TextViewH3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_mode_base05</item>
    </style>

    <style name="InputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/drawable_edittext_background</item>
        <item name="android:textColor">@color/color_mode_base05</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_bottom_sheet_background</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewH1" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextViewH2" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewH3" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewH4" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewH5" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewH6" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewH7" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewH8" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
