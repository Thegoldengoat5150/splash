<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/url_warp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/url"
            style="@style/TextViewH6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/drawable_edittext_background"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/color_mode_base05"
            android:textColorHint="@color/color_mode_base04"
            android:textCursorDrawable="@null"
            tools:text="https://" />

        <requestFocus />
    </RelativeLayout>

    <View
        android:id="@+id/dimmed_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/url_warp"
        android:background="#66000000" />
</RelativeLayout>